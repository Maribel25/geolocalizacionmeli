version: "3"
services:
  mysql_container:
    image: mysql:8.0
    environment:
      - MYSQL_ROOT_PASSWORD=secret
      - MYSQL_DATABASE=geo_schema
      - MYSQL_USER=mysqluser
      - MYSQL_PASSWORD=secret
    ports:
      - 3306:3306
      
  geolocalizacionips:
    image: geolocalizacionips:latest
    ports:
      - 8080:8080
    environment:
      - DATABASE_HOST=localhost
      - DATABASE_USER=mysql_user
      - DATABASE_PASSWORD=secret
      - DATABASE_NAME=geo_schema
      - DATABASE_PORT=3306
    build:
      context: ./
      dockerfile: Dockerfile