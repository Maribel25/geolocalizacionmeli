version: "3"
services:
  mysql_container:
    image: mysql:8.0
    environment:
      - MYSQL_ROOT_PASSWORD=secret
      - MYSQL_DATABASE=geo_schema
      - MYSQL_USER=mysqluser
      - MYSQL_PASSWORD=secret
    ports:
      - 13306:13306
      
  geolocalizacionips:
    image: geolocalizacionips
    ports:
      - 8080:8080
    environment:
      - DATABASE_HOST=mysql_container
      - DATABASE_USER=mysql_user
      - DATABASE_PASSWORD=secret
      - DATABASE_NAME=geo_schema
      - DATABASE_PORT=13306
    build:
      context: ./
      dockerfile: Dockerfile